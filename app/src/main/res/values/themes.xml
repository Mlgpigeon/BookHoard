<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyBookHoard" parent="android:Theme.Material.Light.NoActionBar" />
    <!-- UCrop theme with proper status bar handling -->
    <style name="UCropTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Status bar configuration -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Window configuration to handle system bars correctly -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <!-- UCrop colors -->
        <item name="colorPrimary">#9200EE</item>
        <item name="colorPrimaryDark">#0700B3</item>
        <item name="colorAccent">#03DAC5</item>
    </style>
</resources>